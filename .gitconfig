[user]
    name = Name
    email = Email

[gc]
  auto = 0

[color]
    ui = auto
[core]
  filemode = false
  # excludesfile = $HOME/.gitignore_global

[diff]
    tool = vimdiff
    colorMoved = zebra
[push]
  default = simple

[alias]
    lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    s = status -sb
    # goingon = log --all --abbrev-commit --decorate --date=relative --format=format:'%C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold yellow)(%an)%C(reset)'
    goingon = log --all --abbrev-commit --decorate --date=short --format=format:'%C(bold green)(%aI) (%ar)%C(reset) %C(white)%s%C(reset) %C(bold yellow)(%an)%C(reset)'
    # goingon = log -local --all --abbrev-commit --decorate --date=short --format=format:'%C(bold green)(%aI) (%ar)%C(reset) %C(white)%s%C(reset) %C(bold yellow)(%an)%C(reset)'
    rgoingon = log --all --abbrev-commit --decorate --date=short --format=format:'%(%aI) (%ar) %s (%an)'
    # rgoingon = log -local --all --abbrev-commit --decorate --date=short --format=format:'%(%aI) (%ar) %s (%an)'
[init]
  defaultBranch = master
